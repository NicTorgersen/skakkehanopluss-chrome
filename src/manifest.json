{
    "manifest_version": 2,
    "name": "Ska'kke ha no' pluss",
    "short_name": "Ska'kke ha no' +",
    "description": "Fjerner plussartikler fra vg.no, tb.no, adressa.no og dagbladet.no.",
    "author": "Nic",

    "version": "1.3.2",

    "page_action": {
        "default_icon": {
            "38": "assets/icon38.png"
        },
        "default_title": "Ska'kke ha no' pluss",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "*://*.vg.no/*",
        "*://*.tb.no/*",
        "*://*.dagbladet.no/",
        "*://*.adressa.no/"
    ],
    "background": {
        "scripts": ["background/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.vg.no/",
                "*://*.tb.no/",
                "*://*.dagbladet.no/",
                "*://*.adressa.no/"
            ],
            "js": ["libs/jquery-1.11.1.min.js", "content_scripts/remove_plus.js"]
        }
    ]
}